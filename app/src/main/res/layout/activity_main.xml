<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnZxing"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="208dp"
        android:text="@string/zxing"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnZbar"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:text="zbar扫码"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="@+id/btnZxing"
        app:layout_constraintStart_toStartOf="@+id/btnZxing"
        app:layout_constraintTop_toBottomOf="@+id/btnZxing" />

</android.support.constraint.ConstraintLayout>